{
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "jest"
  ],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json",
		"sourceType": "module"
	},
	"env": {
    "node": true,
    "jest/globals": true
	},
	"rules": {
		"max-len": [2, { "code": 80, "ignoreUrls": true }],
		"no-multiple-empty-lines": 2,
		"newline-per-chained-call": 2
	}
}
