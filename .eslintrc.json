{
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier",
		"prettier/@typescript-eslint"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json",
		"sourceType": "module"
	},
	"env": {
		"node": true
	},
	"rules": {
    "max-len": ["error", { "code": 80, "ignoreUrls": true }],
    "no-multiple-empty-lines": "error"
	}
}
